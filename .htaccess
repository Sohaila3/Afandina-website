# Add to .htaccess in the root directory of your project

<FilesMatch "\.(js|css|png|jpg|jpeg|svg|webp|gif|ico|ttf|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

<Files "index.html">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
</Files>

# For all other files, no-cache
Header set Cache-Control "no-cache"